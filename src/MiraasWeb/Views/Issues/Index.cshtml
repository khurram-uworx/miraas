@model List<MiraasWeb.Controllers.IssueFileInfo>
@{
    ViewData["Title"] = "Issues";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <h1 class="mb-4">üìã Reported Issues</h1>
            
            @if (!string.IsNullOrEmpty(ViewBag.Message))
            {
                <div class="alert alert-info" role="alert">
                    @ViewBag.Message
                </div>
            }
            else if (Model.Count == 0)
            {
                <div class="alert alert-info" role="alert">
                    <h5>No issues reported yet</h5>
                    <p class="mb-0">When users report calculation issues, they will appear here for review.</p>
                </div>
            }
            else
            {
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0">Issue Reports (@Model.Count total)</h5>
                    </div>
                    <div class="card-body p-0">
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th>Issue #</th>
                                        <th>File Name</th>
                                        <th>Created Date</th>
                                        <th>Size</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var issue in Model)
                                    {
                                        <tr>
                                            <td>
                                                <span class="badge bg-primary">
                                                    #@System.IO.Path.GetFileNameWithoutExtension(issue.FileName)
                                                </span>
                                            </td>
                                            <td>
                                                <code>@issue.FileName</code>
                                            </td>
                                            <td>
                                                @issue.CreatedDate.ToString("yyyy-MM-dd HH:mm:ss")
                                            </td>
                                            <td>
                                                @if (issue.Size < 1024)
                                                {
                                                    <span>@issue.Size bytes</span>
                                                }
                                                else if (issue.Size < 1024 * 1024)
                                                {
                                                    <span>@Math.Round(issue.Size / 1024.0, 1) KB</span>
                                                }
                                                else
                                                {
                                                    <span>@Math.Round(issue.Size / (1024.0 * 1024.0), 1) MB</span>
                                                }
                                            </td>
                                            <td>
                                                <a href="@Url.Action("Details", "Issues", new { fileName = issue.FileName })" 
                                                   class="btn btn-sm btn-primary me-2">
                                                    ÔøΩÔ∏è Vielw
                                                </a>
                                                <a href="@Url.Action("Download", "Issues", new { fileName = issue.FileName })" 
                                                   class="btn btn-sm btn-outline-secondary">
                                                    üì• Download
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                
                <div class="mt-3">
                    <div class="alert alert-light" role="alert">
                        <small class="text-muted">
                            <strong>Note:</strong> Issue files contain user-reported calculation problems along with the input data that caused the issue. 
                            These reports help improve the accuracy of the inheritance calculator.
                        </small>
                    </div>
                </div>
            }
        </div>
    </div>
</div>